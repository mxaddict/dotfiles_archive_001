#!/bin/sh
# Set default editor to vim
export EDITOR="vim"

# Check if we have ZSH as our shell
if [ $SHELL=="/bin/zsh" ]; then
	# We have zsh, so we use base16-shell.plugin.zsh
	source ~/.config/base16-shell/base16-shell.plugin.zsh
else
	# We don't have zsh, so we use the regular shell script
	source ~/.config/base16-shell/profile_helper.sh
fi

# set our base16 theme
base16_monokai

# Load our path exports
[ -f ~/.pathrc ] && source ~/.pathrc

# Load our aliases
[ -f ~/.aliasrc ] && source ~/.aliasrc

# load up the custom CLI PROMPT
[ -f ~/.promptline.sh ] && source ~/.promptline.sh

# load the rvm shell configs if installed system wide
[ -f /etc/profile.d/rvm.sh ] && source /etc/profile.d/rvm.sh

# load the rvm shell configs
[ -f ~/.rvm/scripts/rvm ] && source ~/.rvm/scripts/rvm

# load the nvm shell configs
[ -f ~/.nvm/nvm.sh ] && source ~/.nvm/nvm.sh
